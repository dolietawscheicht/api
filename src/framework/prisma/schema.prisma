generator client {
    provider = "prisma-client"
    output   = "./generated"
}

datasource db {
    provider = "postgresql"
}

model User {
    id        String  @id @default(cuid())
    name      String  @unique
    email     String  @unique
    password  String
    avatar    String?
    bio       String?
    confirmed Boolean @default(false)
    role      Role    @default(regular)
}

enum Role {
    sudo
    regular
}
